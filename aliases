# Aliases
alias updatedb="sudo /usr/libexec/locate.updatedb"
alias drh='drush help | grep'
alias beep='echo -en "\a"'
alias dt='cd ~/Desktop'
alias tti-db="sh $HOME/Sites/cg_scripts/tti-db/tti-db"
alias sql="mysql.server"
alias jira="node $HOME/git_repos/jira-cmd/bin/jira.js"
alias apachelog="$EDITOR /usr/local/var/log/apache2"
alias drupalcs="phpcs --standard=Drupal --extensions='php,module,inc,install,test,profile,theme,js,css,info,txt'"

[ -d ${apachedir=$(echo /usr/local/etc/httpd)} ] && alias apacheconfig="$EDITOR $apachedir"
[ -d ${phpdir=$(echo /usr/local/etc/php)} ] && alias phpconfig="$EDITOR $phpdir"
which tree &> /dev/null && alias tree="tree -C"